---
import {proyects} from "@/data/utils"
import { ArrowRight } from "@lucide/astro";



---


{proyects.map((item) => (

    <div class="bg-white rounded-[2.5rem] overflow-hidden border border-slate-100 shadow-sm hover:shadow-xl transition-all group">
                <div class="h-64 bg-slate-200 relative overflow-hidden">
                    <img src={item.img.src} alt={`Imagen sobre ${item.name}`} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                    <div class="absolute top-4 left-4 bg-blue-600 text-white px-4 py-1 rounded-full text-xs font-bold uppercase">{item.badge}</div>
                </div>
                <div class="p-8">
                    <h3 class="text-2xl font-bold mb-4">{item.name}</h3>
                    <div class="space-y-4 mb-6">
                        <div>
                            <p class="text-xs font-black text-blue-600 uppercase tracking-widest mb-1">El Reto</p>
                            <p class="text-slate-600 text-sm italic">{item.problem}</p>
                        </div>
                        <div>
                            <p class="text-xs font-black text-emerald-600 uppercase tracking-widest mb-1">El Resultado</p>
                            <p class="text-slate-800 text-sm font-bold">{item.solution}</p>
                        </div>
                    </div>
                    <a
                        href="#" 
                        class="w-full py-3 border-2 border-slate-100 rounded-2xl font-bold text-slate-700 hover:bg-slate-50 transition-colors flex items-center justify-center gap-2">
                            Ver Detalles 
                        <ArrowRight width={20} color="gray"/>
                    </a>
                </div>
            </div>
))}